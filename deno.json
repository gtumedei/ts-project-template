{
  "tasks": {
    "start": "cross-env ENV=production deno run --allow-env src/main.ts",
    "dev": "cross-env ENV=development deno run --allow-env --watch src/main.ts",
    "check": "deno check src/main.ts && deno lint src/main.ts"
  },
  "imports": {
    "cross-env": "npm:cross-env@^7.0.3"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
